        android:layout_marginStart="45dp"
        android:textColor="@color/primary_text_default_material_dark"
        android:textSize="30sp" />

    <TextView
        android:textColor="@color/primary_text_default_material_dark"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
